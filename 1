#include <stdio.h>

int main() {
    int i, n;
    int a = 0;
    int sum = 0;
    
    printf("How many numbers are required? ");
    scanf("%d", &n);
    int x[n];
    
    printf("Type %d numbers: ", n);
    
    for (i = 0; i <= n-1; ++i) {
        scanf("%d", &x[i]);
    }
    
    // SUM
    for (i = 0; i <= n-1; ++i) {
        sum += x[i];
    }
    printf("The sum is: %d \n", sum);
    
    // MEAN
    int mean = sum / 4;
    printf("The mean is: %d \n", mean);
    
    // MAXIMUM
    for (i = 0; i <= n-1; ++i) {
        if (x[i] > a) {
            a = x[i];
        }
    }
    printf("The maximum is: %d \n", a);
    
    // MINIMUM
    for (i = 0; i <= n-1; ++i) {
        if (x[i] < a) {
            a = x[i];
        }
    }
    printf("The minimum is: %d \n", a);
    
    return 0;
}
